{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "lunatech:electricity",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/entity/experience_orb"
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"per_update_expression": "variable.age = variable.particle_age * 2;variable.age = (variable.age > 1) ? 2 - variable.age : variable.age;"
