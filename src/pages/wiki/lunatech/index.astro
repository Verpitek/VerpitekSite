<WikiLayout title="LunaTech">
    <section class="intro">
        <p>Welcome to the LunaTech wiki! This page catalogs all items and blocks available in the LunaTech addon for Minecraft Bedrock Edition.</p>
    </section>

    <section class="items">
        <h2>Items (43)</h2>
        <div class="grid">
            {items.map(item => (
                <div class="card">
                    <div class="card-image">
                        {item.texturePath ? (
                            <img src={"/" + item.texturePath} alt={item.name} width="64" height="64" />
                        ) : (
                            <div class="placeholder">No texture</div>
                        )}
                    </div>
                    <div class="card-content">
                        <h3>{item.name}</h3>
                        <p class="identifier">{item.identifier}</p>
                        <p class="description">{item.description}</p>
                        {item.recipes.length > 0 ? (
                            <div class="recipes">
                                <strong>Recipes:</strong>
                                <ul>
                                    {item.recipes.map(recipe => (
                                        <li><a href={"/" + recipe} target="_blank">{recipe.split('/').pop()}</a></li>
                                    ))}
                                </ul>
                            </div>
                        ) : ''}
                    </div>
                </div>
            ))}
        </div>
    </section>

    <section class="blocks">
        <h2>Blocks (32)</h2>
        <div class="grid">
            {blocks.map(block => (
                <div class="card">
                    <div class="card-image">
                         <BedrockModelViewer
                             geoSrc={getGeometryPath(blockGeometryMap[block.identifier] || `geometry.${block.identifier.split(':')[1]}`)}
                             texSrc={block.texturePath ? "/" + block.texturePath : undefined}
                             size={150}
                             spinSpeed={0.5}
                         />
                    </div>
                    <div class="card-content">
                        <h3>{block.name}</h3>
                        <p class="identifier">{block.identifier}</p>
                        <p class="description">{block.description}</p>
                        {block.recipes.length > 0 ? (
                            <div class="recipes">
                                <strong>Recipes:</strong>
                                <ul>
                                    {block.recipes.map(recipe => (
                                        <li><a href={"/" + recipe} target="_blank">{recipe.split('/').pop()}</a></li>
                                    ))}
                                </ul>
                            </div>
                        ) : ''}
                    </div>
                </div>
            ))}
        </div>
    </section>

    <style>
        .intro {
            margin-bottom: 2rem;
            padding: 1rem;
            background: #2a2a2a;
            border-radius: 8px;
        }
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.5rem;
            margin-top: 1rem;
        }
        .card {
            background: #333;
            border: 1px solid #444;
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-4px);
            border-color: #e1ff00;
        }
        .card-image {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 1.5rem;
            background: #222;
            border-bottom: 1px solid #444;
        }
        .card-image img {
            image-rendering: pixelated;
            width: 64px;
            height: 64px;
        }
        .placeholder {
            width: 64px;
            height: 64px;
            background: #555;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #999;
            font-size: 0.8rem;
        }
        .card-content {
            padding: 1.5rem;
        }
        .card-content h3 {
            margin-top: 0;
            color: #e1ff00;
            font-size: 1.2rem;
        }
        .identifier {
            font-family: monospace;
            color: #aaa;
            font-size: 0.9rem;
            margin: 0.5rem 0;
        }
        .description {
            color: #ccc;
            line-height: 1.4;
        }
        .recipes {
            margin-top: 1rem;
            font-size: 0.9rem;
        }
        .recipes ul {
            margin: 0.5rem 0 0 0;
            padding-left: 1.2rem;
        }
        .recipes a {
            color: #aa75ff;
            text-decoration: none;
        }
        .recipes a:hover {
            text-decoration: underline;
        }
        h2 {
            color: #e1ff00;
            border-bottom: 2px solid #444;
            padding-bottom: 0.5rem;
        }
        section {
            margin-bottom: 3rem;
        }
    </style>
</WikiLayout>
