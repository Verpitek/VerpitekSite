---
import "../styles/global.css";
import Nav from "./navbar.astro";
import Head from "./head.astro";
import Footer from "./footer.astro";

interface Props {
    title: string;
    sidebarLinks?: Array<{ label: string; href: string }>;
}
const { title, sidebarLinks = [] } = Astro.props;
---

<html lang="en">
    <Head />
    <body>
        <Nav highlighted="navwiki" />
        <div class="wiki-container">
            <aside class="wiki-sidebar">
                <h3>Main Navigation</h3>
                <ul>
                    <li><a href="/">Main Site</a></li>
                </ul>
                <h3>Wiki Navigation</h3>
                <ul>
                    {sidebarLinks.map(link => (
                        <li>
                            <a href={link.href}>{link.label}</a>
                        </li>
                    ))}
                </ul>
                <h3>Inner Wikis</h3>
                <ul>
                    <li><a href="/wiki">Wiki Home</a></li>
                    <li><a href="/wiki/lunatech">LunaTech</a></li>
                    <li><a href="/wiki/trinkoid">Trinkoid</a></li>
                </ul>
            </aside>
            <main class="wiki-content">
                <h1>{title}</h1>
                <slot />
            </main>
        </div>
        <Footer />
    </body>
</html>

<style>
    .wiki-container {
        display: flex;
        min-height: calc(100vh - 200px);
        margin: 2rem 5vw;
        gap: 2rem;
    }
    .wiki-sidebar {
        flex: 0 0 250px;
        background: #222;
        border: 1px solid #333;
        padding: 1.5rem;
        align-self: flex-start;
    }
    .wiki-sidebar h3 {
        color: #e1ff00;
        margin-top: 0;
        margin-bottom: 1rem;
    }
    .wiki-sidebar ul {
        list-style: none;
        padding: 0;
        margin: 0 0 2rem 0;
    }
    .wiki-sidebar li {
        margin-bottom: 0.75rem;
    }
    .wiki-sidebar a {
        color: papayawhip;
        text-decoration: none;
        display: block;
        padding: 0.5rem;
        transition: background 0.3s;
    }
    .wiki-sidebar a:hover {
        background: #333;
        color: #aa75ff;
    }
    .wiki-content {
        flex: 1;
        background: #222;
        border: 1px solid #333;
        padding: 2rem;
    }
    .wiki-content h1 {
        color: #e1ff00;
        margin-top: 0;
        margin-bottom: 2rem;
    }
    @media (max-width: 768px) {
        .wiki-container {
            flex-direction: column;
            margin: 1rem auto;
            max-width: 95vw;
            align-items: center;
        }
        .wiki-sidebar {
            flex: none;
            width: 100%;
            text-align: center;
        }
        .wiki-content {
            text-align: center;
        }
        .wiki-sidebar ul {
            padding: 0;
        }
        .wiki-sidebar li {
            text-align: center;
        }
    }
</style>